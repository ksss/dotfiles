escape ^tt

# 256色
defbce "on"
term xterm-256color

# info
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
termcapinfo xterm* ti@:te@

# 文字コード
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8

# 背景描画
defbce "on"
# vimとかlessで画面をもどす
altscreen on

# startメッセージ
startup_message off

# エラー時の点滅
vbell off

# メッセージ表示時間
msgwait 4

# メッセージ待ち時間
msgminwait 1

# スクロールバッファ
defscrollback 4000


defbce on

# ステータスバー
caption splitonly "%3n %f %t"
hardstatus alwayslastline "%{.Kw}%m/%d [%c] %-w %{.wk}%{!}%n %f%t%{.Kw} %+w %=  %0`"
